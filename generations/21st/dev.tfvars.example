# ==============================================
# CEOS 21기 Dev 환경 설정
# dev.ceos-sinchon.com
# ==============================================
# 사용 전 이 파일을 dev.tfvars로 복사하고 값을 수정하세요.
# cp dev.tfvars.example dev.tfvars

# AWS 계정 설정:
# export AWS_PROFILE="ceos-21st"

generation = "21st"

# ==============================================
# EC2 설정
# ==============================================
# 최신 AMI ID 확인:
# aws ec2 describe-images --region ap-northeast-2 \
#   --filters "Name=name,Values=ubuntu/images/hvm-ssd/ubuntu-jammy-22.04-amd64-server-*" \
#   --query 'Images | sort_by(@, &CreationDate) | [-1].ImageId' --output text
ec2_ami_id   = "ami-0c9c942bd7bf113a2"
ec2_key_name = "ceos-21st-key"

ec2_instance_type    = "t3.micro"
ec2_root_volume_size = 20

# ==============================================
# Docker Hub
# ==============================================
docker_username = "ceos21st"

# ==============================================
# RDS MySQL 설정
# ==============================================
rds_master_username = "admin"
rds_master_password = "ChangeThisPassword123!"  # 반드시 변경

# ==============================================
# 도메인
# ==============================================
domain_name = "ceos-sinchon.com"

# ==============================================
# S3 CORS 설정
# ==============================================
s3_cors_allowed_origins = [
  "https://www.ceos-sinchon.com",
  "https://ceos-sinchon.com",
  "https://dev.ceos-sinchon.com",
  "http://localhost:3000"
]

# ==============================================
# SES 이메일 설정
# ==============================================
ses_email_identities = ["noreply@ceos-sinchon.com"]
ses_domain_identity  = "ceos-sinchon.com"
