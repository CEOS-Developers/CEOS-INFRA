# ==============================================
# CEOS 21기 AWS 계정 정보
# ==============================================
# 사용 전 이 파일을 dev.tfvars로 복사하고 값을 수정하세요.
# cp dev.tfvars.example dev.tfvars

# AWS 계정 설정 방법 (둘 중 하나 선택):
# 1. 환경변수 설정:
#    export AWS_ACCESS_KEY_ID="YOUR_ACCESS_KEY"
#    export AWS_SECRET_ACCESS_KEY="YOUR_SECRET_KEY"
#
# 2. AWS CLI 프로필 사용:
#    export AWS_PROFILE="ceos-21st"

generation = "21st"

# ==============================================
# EC2 설정
# ==============================================
# Ubuntu 22.04 LTS AMI ID (서울 리전 ap-northeast-2)
# 최신 AMI ID 확인:
# aws ec2 describe-images --region ap-northeast-2 \
#   --filters "Name=name,Values=ubuntu/images/hvm-ssd/ubuntu-jammy-22.04-amd64-server-*" \
#   --query 'Images | sort_by(@, &CreationDate) | [-1].ImageId' --output text
ec2_ami_id   = "ami-0c9c942bd7bf113a2" # 2024년 기준, 실행 전 최신 확인 필요
ec2_key_name = "ceos-21st-key"         # AWS 콘솔에서 미리 생성 필요

# EC2 인스턴스 타입
# Dev: t3.small (2 vCPU, 2GB) - Docker로 MySQL+Redis+App 실행
# Prod: t3.micro (2 vCPU, 1GB) - Docker로 Redis+App 실행, DB는 RDS
ec2_instance_type = "t3.small"

# EC2 루트 볼륨 크기 (GB)
# Dev: 30GB (MySQL 데이터 포함)
# Prod: 20GB
ec2_root_volume_size = 30

# ==============================================
# Docker Hub 정보
# ==============================================
docker_username = "ceos21st" # Docker Hub 사용자명

# ==============================================
# Database 설정 (Dev 환경 - Docker MySQL)
# ==============================================
db_username = "ceos"
db_password = "Ceos21st!Secure#2024" # 반드시 변경하세요
db_name     = "ceos_dev"             # 하이픈(-) 사용 불가

# ==============================================
# Database 설정 (Prod 환경 - RDS MySQL)
# ==============================================
rds_master_username = "admin"
rds_master_password = "Ceos21st!RDS#Prod2024" # 반드시 변경하세요
rds_database_name   = "ceos"

# ==============================================
# S3 CORS 설정
# ==============================================
s3_cors_allowed_origins = [
  "https://www.ceos.or.kr",
  "https://ceos.or.kr",
  "https://dev.ceos.or.kr",
  "http://localhost:3000"
]

# ==============================================
# SES 이메일 설정
# ==============================================
ses_email_identities = [
  "noreply@ceos.or.kr",
  "contact@ceos.or.kr"
]
ses_domain_identity = "ceos.or.kr" # 도메인 전체 인증 (선택사항)

# ==============================================
# 예상 비용
# ==============================================
# Dev 환경:  ~$16/월 (EC2 t3.small만)
# Prod 환경: ~$25/월 (EC2 t3.micro + RDS db.t3.micro)
